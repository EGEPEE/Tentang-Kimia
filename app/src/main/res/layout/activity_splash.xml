<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgpattern"
    tools:context="egaprasetianti.finalproject.Splash">

    <ImageView
        android:id="@+id/imgSplash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/imgsplash"
        android:layout_marginBottom="20dp"/>
    <TextView
        android:layout_below="@+id/imgSplash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Tentang Kimia"
        android:textSize="35sp"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimaryDarkTrans"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_margin="15dp"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>
